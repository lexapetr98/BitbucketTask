{namespace bitbucket.internal.feature.file}

/**
 * Originally file-content, abstracted out
 *
 * @param? extraClasses
 * @param? fileIcon
 * @param? icon
 * @param? breadcrumbs
 * @param? primaryToolbarContent
 * @param? secondaryToolbarContent
 */
{template .fileToolbar}
    <div class="file-toolbar{if $extraClasses} {$extraClasses}{/if}">
        <div class="secondary">{if $secondaryToolbarContent}{$secondaryToolbarContent|noAutoescape}{/if}</div>
        <div class="primary">
            {if $fileIcon}
                {call aui.icons.icon}
                    {param icon: 'document' /}
                    {param size: 'small' /}
                    {param useIconFont: true /}
                {/call}
            {/if}
            {if $icon}
                {$icon|noAutoescape}
            {/if}
            {if $breadcrumbs}
                {call bitbucket.internal.widget.breadcrumbs.breadcrumbs}
                    {param pathComponents: [] /}
                {/call}
            {/if}
            {if $primaryToolbarContent}{$primaryToolbarContent|noAutoescape}{/if}
        </div>
    </div>
{/template}
